{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@root/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "env.d.ts"],
  "exclude": ["**/node_modules", "__tests__"]
}
